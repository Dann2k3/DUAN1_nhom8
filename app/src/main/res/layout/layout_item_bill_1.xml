<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="150dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/imv_ava_item_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/green1" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ib_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kalam_regular"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ib_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn giá: 35K"
            android:textColor="@color/purple_700"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_id_quan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: 6"
            android:textColor="@color/purple_700"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_id_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành tiền: 145K"
            android:textColor="@color/red"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>