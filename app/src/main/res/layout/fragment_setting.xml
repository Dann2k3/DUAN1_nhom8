<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/setting_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_avatar_frgst"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:src="@drawable/anime_naruto" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name_frgst"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Họ Và Tên"
            android:layout_marginTop="25dp">

            <EditText
                android:id="@+id/edt_user_name_frgst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:maxLength="40"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_age_frgst"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Tuổi"
            android:layout_marginTop="15dp"
            >

            <EditText
                android:id="@+id/edt_age_frgst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="27"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E0E0E0"
            android:padding="8dp"
            android:gravity="center_vertical">
            <TextView
                android:text="Giới tính"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>
            <Spinner
                android:id="@+id/sp_genger_frgst"
                android:layout_marginStart="62dp"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_address_frgst"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            android:layout_marginTop="15dp"
            >

            <EditText
                android:id="@+id/edt_address_frgst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:maxLength="27"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_change_info_frgst"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Cập nhật thông tin"
            android:textSize="23dp"
            android:textAllCaps="false" />

    </LinearLayout>

</FrameLayout>